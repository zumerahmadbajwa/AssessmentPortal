<%= form_for([:admin, @project], html: { local: true }) do |f| %>

  <div class="form-outline mb-4 text-light">
    <%= f.label :Title, class: "form-label" %>
    <%= f.text_field :title, required: true, autofocus: true, autocomplete: "title", class: "form-control" %>
  </div>

  <div class="form-outline mb-4 text-light">
    <%= f.label :Description, class: "form-label" %>
    <%= f.text_area :description, required: true, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-outline mb-4 text-light">
    <%= f.label :Start_date, class: "form-label" %>
    <%= f.date_select :start_date, required: true, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-outline mb-4 text-light">
    <%= f.label :End_Date, class: "form-label" %>
    <%= f.date_select :end_date, required: true, autofocus: true, class: "form-control" %>
  </div>

  <div class="dropdown field mb-3 text-start text-light">
    <%= f.label :Select_Status, class: "form-label" %>
    <%= f.select :status, ['planned', 'active', 'completed'] %>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-light' %>
  </div>
<% end %>
