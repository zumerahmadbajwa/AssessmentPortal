<div class="container-fluid w-50 shadow mt-5 rounded border p-4 bg-dark">
  <%= link_to "Back", admin_project_assessments_path %>
  <div class="text-light">
    <h3>Assessmt:<%= @assessment.id %></h3>
    <p><b>Assessment_Title: </b><%= @assessment.title %></p>
    <p><b>Assessment_Description: </b><%= @assessment.description %></p>
    <p><b>Associated User: </b>
      <% @assessment.users.each do |user| %>
        <p><b>User_ID: </b><%= user.id %>
        <p><b>Username: </b><%= user.username %>
      <% end %>
    </p>
    <%= link_to 'Add Question', new_admin_project_assessment_question_path(@project, @assessment) %>
    <% @assessment.questions.each do |question| %>
      <div class="question">
        <h3><%= question.content %></h3>
        <%= link_to 'Edit', edit_admin_project_assessment_question_path(@assessment, question) %>
        <%= link_to 'Delete', admin_project_assessment_question_path(@assessment, question), method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>
  </div>
 </div>
