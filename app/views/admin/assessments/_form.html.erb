<%= form_for([:admin, @project, @assessment], html: {local: true }) do |f| %>

  <div class="form-outline mb-4 text-light">
    <%= f.label :Title, class: "form-label" %>
    <%= f.text_field :title, required: true, autofocus: true, autocomplete: "title", class: "form-control" %>
  </div>

  <div class="form-outline mb-4 text-light">
    <%= f.label :Description, class: "form-label" %>
    <%= f.text_area :description, required: true, autofocus: true, class: "form-control" %>
  </div>

  <div class="field mb-4 text-light">
    <%= f.label :user_ids, "Assign Users " %>
    <div class="form-check">
      <% User.all.each do |user| %>
        <%= check_box_tag 'assessment[user_ids][]', user.id, @assessment.user_ids.include?(user.id), class: "form-check-input", id: "user_#{user.id}" %>
        <%= label_tag "user_#{user.id}", user.username, class: "form-check-label" %>
        <br>
      <% end %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-secondary' %>
  </div>
<% end %>
