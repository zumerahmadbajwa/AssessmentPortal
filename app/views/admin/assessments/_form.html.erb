<%= form_for [:admin, @project, @assessment] do |f| %>

  <div class="form-outline mb-4 text-light">
    <%= f.label :Title, class: "form-label" %>
    <%= f.text_field :title, required: true, autofocus: true, autocomplete: "title", class: "form-control" %>
  </div>

  <div class="form-outline mb-4 text-light">
    <%= f.label :Description, class: "form-label" %>
    <%= f.text_area :description, required: true, autofocus: true, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :user_ids, "Assign Users" %>
    <%= f.collection_select :user_ids, User.all, :id, :username, { multiple: true }, { size: 10 } %>
  </div>

  <%= f.submit "Create Assessment", class: 'actions mb-2 text-dark btn btn-warning mt-3' %>
<% end %>
