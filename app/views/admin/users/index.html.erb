<div class="w-100 shadow mt-5 rounded border p-4 bgcolor bg-gradient">
  <div class= "text-light">
    <div class="table-responsive">
      <%= link_to '←', root_path, class: 'linkcolor' %>
      <%= search_form_for @q, url: admin_users_path, method: :get do |f| %>
        <h2 class= "text-light">Users</h2>
        <div class="float-end input-group w-50 input-group-sm mb-4" >
          <%= f.search_field :username_cont, placeholder: "Search Here ", class:"form-control"%>
          <%= f.submit 'Search', class: "btn btn-secondary" %>
        </div>  
      <% end %> 
      <table class="table table-sm">
        <thead class="text-light text-center">
          <th>ID</th>
          <th>Username</th>
          <th>Email</th>
          <th>Role</th>
          <th>By Invite</th>
          <th>Action</th>
        </thead>
        <tbody class="text-light text-center">
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.username %></td>
              <td><%= user.email %></td>
              <td><%= user.role %></td>
              <td><%= user.created_by_invite? %></td>
              <td>
                <%= link_to "Details", admin_user_path(user), class: "linkcolor" %>
                <%= link_to "Edit", edit_admin_user_path(user), class: "linkcolor" %>
                <%= link_to 'Destroy', admin_user_path(user.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "linkcolor" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <%= link_to 'Invite User', new_user_invitation_path, class: 'btn btn-light' %>
    </div>
  </div>
</div>
