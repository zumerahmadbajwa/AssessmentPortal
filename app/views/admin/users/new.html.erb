<div class="w-100 shadow mt-5 rounded border p-4 bgcolor bg-gradient">
  <div class="text-light">
    <%= link_to '←', admin_users_path  %>
    <h2>Create User</h2>
    <%= form_for([:admin, @user], html: { local: true }) do |f| %>

      <div class="field mb-3 text-start">
        <%= f.label :username, class:"form-label" %><br />
        <%= f.text_field :username, autofocus: true, required: true%>
      </div>

      <div class="field mb-3 text-start">
        <%= f.label :email, class:"form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
      </div>

      <div class="actions">
        <%= f.submit class: 'btn btn-light' %>
      </div>
    <% end %>
  </div>
</div>
